<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/travelnote_blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/travelnote_blue_light</item>
        <item name="colorPrimaryDark">@color/travelnote_blue</item>
        <item name="android:windowBackground">@color/travelnote_grey_light</item>
        <item name="colorAccent">@color/travelnote_red</item>
    </style>

    <style name="Theme.BasicTravelnote.Light.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorAccent">@color/travelnote_red</item>
        <item name="android:colorBackground">@color/travelnote_grey_light</item>
        <item name="colorPrimary">@color/travelnote_blue</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:colorForeground">@color/white</item>
    </style>


</resources>
