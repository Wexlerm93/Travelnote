<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.ur.mi.travelnote.GalleryFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/gallery_empty_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="21sp"
        android:padding="10dp"
        android:textColor="@color/travelnote_blue"
        />

    <GridView
        android:id="@+id/grid_view_gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalSpacing="2dp"
        android:horizontalSpacing="2dp"
        android:stretchMode="columnWidth"
        android:numColumns="2"
        android:layout_weight="0.6"/>

    <ProgressBar
        android:id="@+id/progress_loader"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />


        <Button
            android:id="@+id/new_gallery_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/travelnote_red"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_margin="@dimen/travelnote_margin_default"
            android:text="Neues Galeriebild hinzufÃ¼gen"/>




</LinearLayout>
