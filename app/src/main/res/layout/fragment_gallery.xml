<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.ur.mi.travelnote.GalleryFragment"
    android:orientation="vertical">


    <TextView
        android:id="@+id/album_name"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/gallery_string"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_margin="@dimen/travelnote_margin_default"/>

    <ListView
        android:id="@+id/gallery_list_view"
        android:layout_weight="0.6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/album_name"></ListView>



</RelativeLayout>
