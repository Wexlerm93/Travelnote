<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context="de.ur.mi.travelnote.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/travelnote_margin_default"
            android:contentDescription="@string/logo_travelnote"
            app:srcCompat="@drawable/travelnote_logo" />

        <TextView
            android:id="@+id/user_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="@string/default_hello_settings_text"
            android:textColor="@color/travelnote_blue"
            android:textSize="21sp" />

        <Button
            android:id="@+id/show_location_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/travelnote_margin_default"
            android:background="@color/travelnote_red"
            android:text="@string/show_saved_locations_text"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <Button
            android:id="@+id/logout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/travelnote_margin_default"
            android:background="@color/travelnote_yellow"
            android:text="@string/logout_text"
            android:textColor="@color/travelnote_blue" />
    </LinearLayout>


</LinearLayout>
