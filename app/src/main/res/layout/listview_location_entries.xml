<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:id="@+id/listitem_locality_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@color/travelnote_red"
            android:textAlignment="center"
            android:paddingTop="@dimen/diary_list_view_padding_default"
            android:paddingBottom="@dimen/diary_list_view_padding_small"
            android:paddingLeft="@dimen/diary_list_view_padding_end"
            android:paddingStart="@dimen/diary_list_view_padding_end"/>
        <TextView
            android:id="@+id/listitem_country_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/diary_list_view_padding_default"
            android:paddingBottom="@dimen/diary_list_view_padding_small"
            android:textAlignment="center"
            android:textColor="@color/travelnote_blue"
            android:layout_weight="1"
            android:textSize="16sp"
            android:paddingRight="@dimen/diary_list_view_padding_end"
            android:paddingEnd="@dimen/diary_list_view_padding_end"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/listitem_address_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/travelnote_turquoise"
            android:paddingTop="@dimen/diary_list_view_padding_small"
            android:paddingBottom="@dimen/diary_list_view_padding_default"
            android:paddingLeft="@dimen/diary_list_view_padding_end"
            android:paddingStart="@dimen/diary_list_view_padding_end"
            android:paddingRight="@dimen/diary_list_view_padding_end"
            android:paddingEnd="@dimen/diary_list_view_padding_end"/>

    </LinearLayout>


</LinearLayout>