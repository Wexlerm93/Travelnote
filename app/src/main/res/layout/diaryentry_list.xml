<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/diaryentry_entryitem"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="12dp">

    <TextView
        android:id="@+id/diary_date"
        android:layout_width="85dp"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/diary_content"
        android:layout_alignBottom="@+id/diary_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/diary_content"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textSize="16sp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/diary_date"
        android:layout_toEndOf="@+id/diary_date" />




</RelativeLayout>